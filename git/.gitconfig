[user]
    name = Mark Wales
    email = mark@smallhadroncollider.com
[push]
    default = current
    recurseSubmodules = on-demand
[commit]
    template = ~/.gitcommit.template
[color]
    ui = true
[core]
    editor = vim
    ignorecase = false
    excludesfile = /Users/mark/.gitignore
    attributesfile = /Users/mark/.gitattributes
[help]
    autocorrect = 1
[gitflow "branch"]
    master = master
    develop = develop
[gitflow "prefix"]
    feature = feature/
    release = release/
    hotfix = hotfix/
    support = support/
    versiontag =
[diff "exif"]
    textconv = exiftool
[diff]
    submodule = log
[status]
    submoduleSummary = true
[fetch]
    recurseSubmodules = on-demand
[merge]
    ff = only
    tool = vimdiff
    conflictstyle = diff3
[pull]
    rebase = true
[credential]
    helper = osxkeychain
[alias]
    permission-reset = !git diff -p -R --no-color | grep -E \"^(diff|(old|new) mode)\" --color=never | git apply
[submodule]
    fetchJobs = 4
[mergetool]
    prompt = false
[init]
    defaultBranch = main
[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta
[interactive]
    diffFilter = delta --color-only
[delta]
    features = side-by-side line-numbers decorations
    whitespace-error-style = 22 reverse
[delta "decorations"]
    commit-decoration-style = bold yellow box ul
    file-style = bold yellow ul
    file-decoration-style = none
